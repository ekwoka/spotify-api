{
  "name": "@ekwoka/spotify-api",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/",
  "types": "dist/",
  "author": "Eric Kwoka",
  "license": "MIT",
  "version": "0.0.4",
  "description": "Composable Wrapper for the Spotify Web Api and Spotify Web Playback SDK",
  "keywords": [
    "spotify",
    "api",
    "wrapper",
    "composable",
    "playback",
    "typescript",
    "node"
  ],
  "scripts": {
    "build": "node scripts/esbuild.js",
    "build:tsc": "tsc",
    "lint": "eslint --fix ./src; prettier --write ./src --loglevel error",
    "patch": "run-s test:run build:tsc && pnpm version patch && pnpm publish",
    "minor": "run-s test:run build:tsc && pnpm version minor && pnpm publish",
    "major": "run-s test:run build:tsc && pnpm version major && pnpm publish",
    "test": "vitest",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "c8": "^7.12.0",
    "esbuild": "^0.14.53",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "undici": "^5.8.1",
    "vite": "^3.0.4",
    "vitest": "^0.21.0"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true
  }
}
